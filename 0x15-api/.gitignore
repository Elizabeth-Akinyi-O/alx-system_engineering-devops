#!/usr/bin/python3
""" Returns information about an employee's todo_list progress using REST API
"""

import re
import requests
import sys

REST_API = "https://jsonplaceholder.typicode.com"

if __name__ == '__main__':
    """  checks if there is more than one command-line argument provided """
    if len(sys.argv) > 1:
        """ Use a regex to check if the provided argument is a string of digits """
        if re.fullmatch(r'\d+', sys.argv[1]):
            """ Convert the employee ID to an integer """
            empl_id = int(sys.argv[1])
            """ GET request to fetch the user data in JSON format """
            req = requests.get('{}/users/{}'.format(REST_API, empl_id)).json()
            """ GET request to fetch all tasks """
            task_req = requests.get('{}/todos'.format(REST_API)).json()
            empl_name = req.get('name')
            """ Filter the list of all tasks to include only those that belong to the user """
            todo_list = list(filter(lambda x: x.get('userId') == empl_id, task_req))
            """ Filter the user's tasks to include only those that are completed """
            completed_tasks = list(filter(lambda x: x.get('completed'), todo_list))
            """ Print summary of tasks """
            print(
                'Employee {} is done with todo_list({}/{}):'.format(
                    empl_name,
                    len(completed_tasks),
                    len(todo_list)
                )
            )
            """ Print titles of completed tasks """
            if len(completed_tasks) > 0:
                for task in completed_tasks:
                    print('\t {}'.format(task.get('title')))
